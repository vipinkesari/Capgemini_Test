<?xml version="1.0" encoding="utf-8"?>
                                                                   

    <androidx.cardview.widget.CardView
        android:id="@+id/parentView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10" android:tag="layout/item_main_weather_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/weatherIv"
                android:layout_width="@dimen/thumb_image_size"
                android:layout_height="@dimen/thumb_image_size"
                android:contentDescription="@string/iv_desc"
                android:src="@drawable/placeholder" />

            <TextView
                android:id="@+id/tempTv"
                style="@style/Item_TextViewStyle"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:hint="@string/hint_title"
                android:textSize="@dimen/sp_20" />

            <TextView
                android:id="@+id/feelsTv"
                style="@style/Item_TextViewStyle"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_5"
                android:hint="@string/hint_Feels_Like" />

            <TextView
                android:id="@+id/dateTv"
                style="@style/Item_User_TextViewStyle"
                android:gravity="center"
                android:hint="@string/hint_updated" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
         